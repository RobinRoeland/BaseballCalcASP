@model BaseballCalcASP.Models.Team

@{
    ViewData["Title"] = "Add Player to Team";
}

<h1>Add Player to Team</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPlayer">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label ="Player" class="control-label"></label>
                <select name="playerid" asp-items="ViewBag.Players" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
